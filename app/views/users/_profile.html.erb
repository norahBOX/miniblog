  <div class="profile-image">
    <% if user.image.present? %>
      <%= image_tag user.image, style: "width:250px;" %>
    <% else %>
      <%= image_tag "no_image.png", style: "width:250px;"%>
    <% end %>
  <div>

  <hr>

  모든 글 목록
  <ul>
    <% @user.posts.each do |post| %>
      <li>
        <%= link_to post.title, user_post_path(user_slug: @user.slug, id: post.id) %>
      </li>
    <% end %>
  </ul>